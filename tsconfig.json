{
    "compilerOptions": {
      "jsx": "react-jsx",
      "module": "system",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outFile": "../../built/local/tsc.js",
      "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ]
  }